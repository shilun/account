<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.account.dao.AccountDetailDao">
    <sql id="limit">
        <if test="startRow != null and endRow !=null">limit #{startRow},#{endRow}</if>
    </sql>
    <sql id="orderCondition">
        <if test="orderColumn != null and orderColumn != ''">ORDER BY ${orderColumn}</if>
    </sql>

    <sql id="Condition">
        <where>
            <if test="id != null "><![CDATA[AND id =#{id}]]></if>
            <if test="pin != null "><![CDATA[AND pin =#{pin}]]></if>
            <if test="test != null "><![CDATA[AND test =#{test}]]></if>
            <if test="proxyId != null "><![CDATA[AND proxy_id =#{proxyId}]]></if>
            <if test="tokenType != null "><![CDATA[AND token_type =#{tokenType}]]></if>
            <if test="bizType != null "><![CDATA[AND biz_type =#{bizType}]]></if>
            <if test="bizId != null "><![CDATA[AND biz_id =#{bizId}]]></if>
            <if test="beforeAmount != null "><![CDATA[AND before_amount =#{beforeAmount}]]></if>
            <if test="beforeFreeze != null "><![CDATA[AND before_freeze =#{beforeFreeze}]]></if>
            <if test="changeAmount != null "><![CDATA[AND change_amount =#{changeAmount}]]></if>
            <if test="changeFreeze != null "><![CDATA[AND change_freeze =#{changeFreeze}]]></if>
            <if test="afterAmount != null "><![CDATA[AND after_amount =#{afterAmount}]]></if>
            <if test="afterFreeze != null "><![CDATA[AND after_freeze =#{afterFreeze}]]></if>
            <if test="status != null "><![CDATA[AND status =#{status}]]></if>
            <if test="delStatus != null "><![CDATA[AND del_status =#{delStatus}]]></if>
            <if test="createTime != null "><![CDATA[AND create_time =#{createTime}]]></if>
            <if test="queryStartTime != null and createTime != null "><![CDATA[AND create_time BETWEEN #{queryStartTime} AND #{createTime}]]></if>
            <if test="updateTime != null "><![CDATA[AND update_time =#{updateTime}]]></if>
        </where>
    </sql>
    <sql id="columns">
	id as id ,pin as pin,test ,proxy_id as proxyId ,token_type as tokenType ,biz_type as bizType ,biz_id as bizId ,before_amount as beforeAmount ,before_freeze as beforeFreeze ,change_amount as changeAmount ,change_freeze as changeFreeze ,after_amount as afterAmount ,after_freeze as afterFreeze ,status as status ,del_status as delStatus ,create_time as createTime ,update_time as updateTime
</sql>
    <insert id="insert" parameterType="accountDetail">
        insert into account_detail
        (id,pin,test,proxy_id,token_type,biz_type,biz_id,charge_type,before_amount,before_freeze,change_amount,change_freeze,after_amount,after_freeze,status,del_status,create_time,update_time)
        values
        (#{id},#{pin},#{test},#{proxyId},#{tokenType},#{bizType},#{bizId},#{chargeType},#{beforeAmount},#{beforeFreeze},#{changeAmount},#{changeFreeze},#{afterAmount},#{afterFreeze},#{status},#{delStatus},#{createTime},#{updateTime})
        <selectKey keyProperty="id" resultType="long" order="AFTER">
            select last_insert_id()
        </selectKey>
    </insert>

    <delete id="del" parameterType="long">
    update  account_detail set del_status=2,update_Time=now() where id = #{id}
</delete>

    <update id="update" parameterType="accountDetail">
        update account_detail
        <set>
            <if test="pin != null "><![CDATA[ pin =#{pin},]]></if>
            <if test="proxyId != null "><![CDATA[ proxy_id =#{proxyId},]]></if>
            <if test="test != null "><![CDATA[ test =#{test},]]></if>
            <if test="tokenType != null "><![CDATA[ token_type =#{tokenType},]]></if>
            <if test="bizType != null "><![CDATA[ biz_type =#{bizType},]]></if>
            <if test="bizId != null "><![CDATA[ biz_id =#{bizId},]]></if>
            <if test="chargeType != null "><![CDATA[ charge_type =#{chargeType},]]></if>
            <if test="beforeAmount != null "><![CDATA[ before_amount =#{beforeAmount},]]></if>
            <if test="beforeFreeze != null "><![CDATA[ before_freeze =#{beforeFreeze},]]></if>
            <if test="changeAmount != null "><![CDATA[ change_amount =#{changeAmount},]]></if>
            <if test="changeFreeze != null "><![CDATA[ change_freeze =#{changeFreeze},]]></if>
            <if test="afterAmount != null "><![CDATA[ after_amount =#{afterAmount},]]></if>
            <if test="afterFreeze != null "><![CDATA[ after_freeze =#{afterFreeze},]]></if>
            <if test="status != null "><![CDATA[ status =#{status},]]></if>
            <if test="delStatus != null "><![CDATA[ del_status =#{delStatus},]]></if>
            <if test="createTime != null "><![CDATA[ create_time =#{createTime},]]></if>
            <if test="updateTime != null "><![CDATA[ update_time =#{updateTime},]]></if>
        </set>
        where id=#{id}
    </update>
    <select id="queryCount" parameterType="accountDetail" resultType="int">
        select count(1) from account_detail
        <include refid="Condition"/>
    </select>
    <select id="query" parameterType="accountDetail" resultType="accountDetail">
        select
        <include refid="columns"/>
        from account_detail
        <include refid="Condition"/>
        <include refid="orderCondition"/>
        <include refid="limit"/>
    </select>
</mapper>
