<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.account.dao.AccountDao">
    <sql id="limit">
        <if test="startRow != null and endRow !=null">limit #{startRow},#{endRow}</if>
    </sql>
    <sql id="orderCondition">
        <if test="orderColumn != null and orderColumn != ''">ORDER BY ${orderColumn}</if>
    </sql>

    <sql id="Condition">
        <where>
            <if test="id != null "><![CDATA[AND id =#{id}]]></if>
            <if test="pin != null "><![CDATA[AND pin =#{pin}]]></if>
            <if test="proxyId != null "><![CDATA[AND proxy_id =#{proxyId}]]></if>
            <if test="tokenType != null "><![CDATA[AND token_type =#{tokenType}]]></if>
            <if test="amount != null "><![CDATA[AND amount =#{amount}]]></if>
            <if test="freeze != null "><![CDATA[AND freeze =#{freeze}]]></if>
            <if test="status != null "><![CDATA[AND status =#{status}]]></if>
            <if test="test != null "><![CDATA[AND test =#{test}]]></if>
            <if test="delStatus != null "><![CDATA[AND del_status =#{delStatus}]]></if>
            <if test="createTime != null "><![CDATA[AND create_time =#{createTime}]]></if>
            <if test="updateTime != null "><![CDATA[AND update_time =#{updateTime}]]></if>
        </where>
    </sql>
    <sql id="columns">
	id as id ,pin as pin ,proxy_id as proxyId ,token_type as tokenType ,amount as amount ,freeze as freeze,test ,status as status ,del_status as delStatus ,create_time as createTime ,update_time as updateTime
</sql>
    <insert id="insert" parameterType="account">
        insert into account
        (id,pin,test,proxy_id,token_type,amount,freeze,status,del_status,create_time,update_time)
        values
        (#{id},#{pin},#{test},#{proxyId},#{tokenType},#{amount},#{freeze},#{status},#{delStatus},#{createTime},#{updateTime})
        <selectKey keyProperty="id" resultType="long" order="AFTER">
            select last_insert_id()
        </selectKey>
    </insert>

    <delete id="del" parameterType="long">
    update  account set del_status=2,update_Time=now() where id = #{id}
</delete>

    <update id="update" parameterType="account">
        update account
        <set>
            <if test="pin != null "><![CDATA[ pin =#{pin},]]></if>
            <if test="proxyId != null "><![CDATA[ proxy_id =#{proxyId},]]></if>
            <if test="test != null "><![CDATA[ test =#{test},]]></if>
            <if test="tokenType != null "><![CDATA[ token_type =#{tokenType},]]></if>
            <if test="amount != null "><![CDATA[ amount =#{amount},]]></if>
            <if test="freeze != null "><![CDATA[ freeze =#{freeze},]]></if>
            <if test="status != null "><![CDATA[ status =#{status},]]></if>
            <if test="delStatus != null "><![CDATA[ del_status =#{delStatus},]]></if>
            <if test="createTime != null "><![CDATA[ create_time =#{createTime},]]></if>
            <if test="updateTime != null "><![CDATA[ update_time =#{updateTime},]]></if>
        </set>
        where id=#{id}
    </update>
    <select id="queryCount" parameterType="account" resultType="int">
        select count(1) from account
        <include refid="Condition"/>
    </select>
    <select id="query" parameterType="account" resultType="account">
        select
        <include refid="columns"/>
        from account
        <include refid="Condition"/>
        <include refid="orderCondition"/>
        <include refid="limit"/>
    </select>
</mapper>
